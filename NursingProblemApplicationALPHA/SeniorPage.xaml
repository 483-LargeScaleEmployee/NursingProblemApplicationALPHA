<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NursingProblemApplicationALPHA"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NursingProblemApplicationALPHA.SeniorPage"
             Title="SeniorPage">
    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">
        <local:Shape3D
            WidthRequest="400"
            HeightRequest="400"
            Points="{Binding CubePoints}"
            Faces="{Binding CubeFaces}"
            Transform="{Binding CubeTransform}"
            Mode="{Binding Mode}" />

        <Button
            Grid.Row="1"
            Text="Toggle Render Mode"
            Command="{Binding ToggleRenderModeCommand}"
            HorizontalOptions="Center" />
    </Grid>
    
</ContentPage>